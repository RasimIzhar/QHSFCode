            var object = {
                tabid: tabid,
                Admin: admin,
                Contributor: contributor,
                ContributorChecker: contributorChecker,
                ContributorDrafter: contributorDrafter
            };

            TabsCheck.push(object);
        });

        obj.Tabs = TabsCheck;

        debugger

        $.ajax({
            type: "POST",
            url: "/Users/UserRoles",
            contentType: 'application/json',
