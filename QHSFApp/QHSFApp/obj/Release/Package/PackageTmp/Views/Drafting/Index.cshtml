                                <th>Job No</th>
                                <th>Job Title</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Details</th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var items in Model.ListofJobDrafting)
                                {
                                    <tr>
                                        <td>@items.Vt_Jobs.JobNo</td>
                                        <td>@items.Vt_Jobs.JobTitle</td>
