@model DAL.Model.ViewModels.GetJobResponse
@{
    Layout = null;
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="https:/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<script type="text/javascript">
        $(document).on('focus', '.datepicker',function(){
            $(this).datepicker({
                todayHighlight:true,
                format:'yyyy-mm-dd',
                autoclose:true
            })
        });
</script>


<div class="row bg-white mt-30">
    
    <div class="col-12">
        <div class="panel">
            <div class="panel-body">
                <div class="">
                    @using (Html.BeginForm("Edit", "Requirements", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(m => m.ModelObject.ID)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">
                                        Job No
                                    </label>
                                    <div class="">
                                        @Html.TextBoxFor(m => m.ModelObject.JobNo, null, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">Job Title</label>
                                    <div class="">
                                        @Html.TextBoxFor(m => m.ModelObject.JobTitle, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">Job Description</label>
                                    <div class="">
                                        @Html.TextBoxFor(m => m.ModelObject.Description, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">Start Date</label>
                                    <div class="">
                                        @Html.TextBoxFor(m => m.ModelObject.StartDate, null, new { @class = "form-control datepicker" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">End Date</label>
                                    <div class="">
                                        @Html.TextBoxFor(m => m.ModelObject.EndDate, null, new { @class = "form-control datepicker" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="control-label" for="pwd">User Assigned</label>
                                    <div class="">
                                        @*@Html.TextBoxFor(m => m.UserAssigned, null, new { @class = "form-control" })*@
                                        @Html.DropDownListFor(m => m.JobDetails.UserAssignedID,
                                        new SelectList(ViewBag.DropDown, "ID", "FirstName"),
                                        new { @class = "customer-sreach job-deatail-page-input form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">

                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <input type="submit" value="Update" class="btn btn-default" />
                                    @*<button id="btnCreate" type="button" class="btn btn-default">Create</button>*@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Users</h4>
                <input type="hidden" id="UserID" />
            </div>
            <div class="modal-body">
            </div>

        </div>
    </div>
</div>

